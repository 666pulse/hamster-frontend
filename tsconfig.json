{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "./frontend",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "vite-plugin-svg-icons/client"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
}